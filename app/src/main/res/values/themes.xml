<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="Container">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">16dp</item>
    </style>


    <style name="Theme.Peyvand" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <style name="Text" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Text.Title" parent="Text">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Description" parent="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="Text.Large" parent="Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Medium" parent="Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button"></style>

    <style name="Button.Primary" parent="Button">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Secondary" parent="Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Button.TextButton" parent="Text">
        <item name="android:padding">12dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>


    <style name="TextInputContainer" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

    </style>

    <style name="TextInput" parent="Widget.Design.TextInputLayout">

    </style>


    <style name="Button.MenuItem" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
    </style>


</resources>